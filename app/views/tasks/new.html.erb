<div class="task-container">

<%= form_with model: @task, class: 'task-form' do |f| %>

  <p>Please provide the following information to save your task to our database:</p>

  <h2>New Task Form</h2>

  <%= f.label :action %>
  <%= f.text_field :action, class: "edit-task" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "edit-description" %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date, class: "edit-completion-date" %>

  <%= f.submit "Submit Edit", class: "edit-button" %>
<% end %>

</div>
<div class="return-home">
  <h3>
    <%= link_to "Return Home", all_tasks_path, class: "homepage" %>
  </h3>
</div>
